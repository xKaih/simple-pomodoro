<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/simple_pomo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/pixelify_sans"
            android:gravity="center|left"
            android:lineSpacingExtra="35sp"
            android:text="@string/app_name"
            android:textAppearance="@style/simple_pomo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingsIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/settings_description"
            android:src="@drawable/settings_pixel_art"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/playPomodoroButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="@string/pomodoro_button"
        android:src="@drawable/pomodoro_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/playtopause1"
        android:scaleType="center"
        android:clickable="false"
        android:focusable="false"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="@id/playPomodoroButton"
        app:layout_constraintBottom_toBottomOf="@id/playPomodoroButton"
        app:layout_constraintStart_toStartOf="@id/playPomodoroButton"
        app:layout_constraintEnd_toEndOf="@id/playPomodoroButton"/>

    <TextView
        android:id="@+id/timeLeftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/pixelify_sans"
        android:text="0:00"
        android:textAppearance="@style/timer"
        app:layout_constraintBottom_toTopOf="@+id/playPomodoroButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="349dp"
        android:layout_height="343dp"
        android:src="@drawable/pomodoro_primary_image"
        app:layout_constraintBottom_toTopOf="@+id/timeLeftText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top" />

</androidx.constraintlayout.widget.ConstraintLayout>
