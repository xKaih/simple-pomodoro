<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/simple_pomo"
            android:layout_width="187dp"
            android:layout_height="64dp"
            android:fontFamily="@font/pixelify_sans"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="35sp"
            android:text="@string/simple_pomo"
            android:textAppearance="@style/simple_pomo"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/settingsDescription"
            android:src="@drawable/settings_pixel_art" />


    </RelativeLayout>


</RelativeLayout>