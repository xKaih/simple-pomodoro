<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:theme="@style/Theme.SimplePomodoro"
    tools:context=".SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/settings_description"
            android:src="@drawable/settings_pixel_art"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/simple_pomo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/pixelify_sans"
            android:gravity="center"
            android:lineSpacingExtra="35sp"
            android:text="@string/settings_title"
            android:textAppearance="@style/simple_pomo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/backIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workTimeView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pixelify_sans"
                android:text="Work time (minutes):"
                android:textAppearance="@style/default_setting_name" />

            <EditText
                android:id="@+id/editWorkTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/pixelify_sans"
                android:textColor="@color/white"
                android:text="25"
                android:hint="Set work time"
                android:inputType="number"
                android:textAppearance="@style/default_setting_value"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shortRestView"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pixelify_sans"
                android:text="Short rest (minutes):"
                android:textAppearance="@style/default_setting_name" />

            <EditText
                android:id="@+id/editShortRest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/pixelify_sans"
                android:hint="Set short rest time"
                android:textColor="@color/white"
                android:text="5"
                android:inputType="number"
                android:textAppearance="@style/default_setting_value"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/longRestView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/default_setting_name"
                android:layout_weight="1"
                android:fontFamily="@font/pixelify_sans"
                android:text="Long rest (minutes):" />

            <EditText
                android:id="@+id/editLongRest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/pixelify_sans"
                android:hint="Set long rest time"
                android:text="25"
                android:inputType="number"
                android:textColor="@color/white"
                android:textAppearance="@style/default_setting_value"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/longRestThresholdView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pixelify_sans"
                android:text="Long rest threshold (minutes):"
                android:textAppearance="@style/default_setting_name" />

            <EditText
                android:id="@+id/editLongRestThreshold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="60"
                android:textColor="@color/white"
                android:hint="Set long rest threshold time"
                android:fontFamily="@font/pixelify_sans"
                android:inputType="number"
                android:textAppearance="@style/default_setting_value"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearPreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear all preferences"
                android:textAppearance="@style/default_setting_name"
                android:fontFamily="@font/pixelify_sans"
                android:background="@color/purple_700"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>